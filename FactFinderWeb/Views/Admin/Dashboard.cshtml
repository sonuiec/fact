@using FactFinderWeb.ModelsView
@removeTagHelper "Microsoft.AspNetCore.Mvc.TagHelpers.OptionTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var currentSort = Context.Request.Query["sortOrder"];

    int currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    int totalPages = (int)(ViewData["TotalPages"] ?? 1);
    string search = ViewData["Search"]?.ToString() ?? "";
    int serialNo = ((currentPage - 1) * 20) + 1;

    <script>
        $(document).on("change", ".manageby-dropdown", function () {

        var userid = $(this).data("userid");
        var advisorid = $(this).val();

        $.ajax({
        url: '/admin/UpdateAdvisor',
        type: 'POST',
        data: { id: userid, advisorid: advisorid },
        success: function (res) {
                 if (res.success) {
                alert("Advisor updated successfully!");
            setTimeout(function () {
                location.reload();
            }, 500); // ✅ half-second delay so alert is visible
        } else {
        alert("Error updating ManageBy.");
        }
        },
        error: function () {
        alert("Server error while updating.");
        }
        });
        });

     $(document).on("change", ".PlanStatus-dropdown", function () {
         debugger;
        var profileid = $(this).data("profileid");
            var Status = $(this).val();

        $.ajax({
            url: '/admin/UpdateSStatus',
        type: 'POST',
            data: { profileid: profileid, Status: Status },
        success: function (res) {
           if (res.success) {
        alert("Status updated successfully!");
        setTimeout(function () {
            location.reload();
        }, 500); // ✅ half-second delay so alert is visible
    } else {
           alert("Error updating Status.");
        }
        },
        error: function () {
        alert("Server error while updating.");
        }
        });
        });

    </script>
}





<div class="container mt-4">
    <div class="row ">
        <div class="col-md-5">
            <h1 class="page-title">Client List</h1>
        </div>

        <div class="col-md-5">

         
        </div>

        <div class="col-md-2 text-md-end mt-2 mt-md-0">
            <a href="/admin/register" target="_blank" class="btn btn-primary">+ Add Client</a>
        </div>
    </div>
    <div class="row align-content-center ">
        <br />
        <br />

    </div>
    <div class="row ">
        <div class="col-md-5">
            <form method="get" asp-action="Dashboard" >
                <input type="text" name="search" class="form-control d-inline w-50" placeholder="Search..." value="@search" />
                <button type="submit" class="btn btn-primary ms-2">Search</button>    <a href="/admin/dashboard" class="btn btn-outline-secondary">Reset</a>
            </form>
        </div>

        <div class="col-md-5">

         
        </div>

        <div class="col-md-2 text-md-end mt-2 mt-md-0">
          
        </div>
    </div>
   
    <div class="row " style="margin-top:10px">
    <div class="table-responsive table-wrapper">
        <table class="custom-table" id="parents">
        <thead class="">
            <tr>
                <th class="text-center">S. No.</th>
                    <th>Name</th>
                    <th>Email</th>
                <th>Total Plan</th>
                <th>Advisor / ManageBy</th>
                <th class="text-center">Registration Date</th>
                <th>Status</th>
                <th style="width:220px !important">Action</th>
            </tr>
        </thead>

        <tbody>
            @{
                var users = Model as List<FactFinderWeb.ModelsView.AdminMV.MVADUserDetails>;
                var hasRows = users != null && users.Count > 0;

                if (!hasRows)
                {
                    <tr><td colspan="10" class="text-center text-muted py-4">No records found</td></tr>
                    
                }
                else
                {
                    foreach (var user in Model)
                    {
                        var collapseId = $"collapse_{user.Id}";
                        <tr>
                            <td class="text-center">

                                <a data-bs-toggle="collapse" href="#@collapseId" role="button" aria-expanded="false" aria-controls="@collapseId" class="text-decoration-none ">
                                    <i class="bi bi-chevron-down"></i> @serialNo
                                </a>

                            </td>
                            <td>@user.Name</td>
                            <td>@user.email</td>
                            <td>@user.ProfileLst.Count</td>
                            <td>
                                <select class="form-control manageby-dropdown" data-userid="@user.Id">
                                    <option value="0">-- Select --</option>
                                    @foreach (var admin in (IEnumerable<dynamic>)ViewData["AdminUsersDropdown"])
                                    {
                                        <option value="@admin.Id" @Html.Raw(user.advisorid == admin.Id ? "selected=\"selected\"" : "")>
                                            @admin.Name
                                        </option>
                                    }
                                </select>
                            </td>
                            <td class="text-center">@user.createddate.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@user.activestatus</td>

                            <td class="text-start">
                                <a href="/admin/UserDetails/@user.Id" target="_blank">View Detail</a>
                                <br />

                            </td>
                        </tr>

                        <tr>
                            <td colspan="10" class="p-0">
                                <div  id="@collapseId">
                                    <div class="d-flex justify-content-center mt-3 mb-3">
                                        <div class="card shadow-sm" style="width: 95%;">
                                            <div class="card-header bg-light fw-bold text-start">
                                                <i class="bi bi-file-earmark-text"></i> Plan Details
                                            </div>
                                            <div class="card-body p-2">
                                                <div class="table-responsive">
                                                            <table class="custom-table  align-middle text-center mb-0">
                                                        <thead class="">
                                                                          <tr >
                                                                <th style="width:50px;">UID</th>
                                                                <th>Name</th>
                                                                <th>Email</th>
                                                                <th>Plan Type</th>
                                                                <th>Created Date</th>
                                                                <th> Status</th>
                                                                <th>Awaken Status</th>
                                                                <th style="width:280px;">Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @{
                                                                int childSerial = 1;
                                                                foreach (var child in user.ProfileLst)
                                                                {
                                                                    <tr>

                                                                        <td>@child.UId</td>
                                                                        <td>@child.UserFullName</td>
                                                                        <td>@child.UserEmail</td>
                                                                        <td>@child.UserPlan</td>
                                                                        <td>@child.UserRegisterDate.ToString("dd/MM/yyyy")</td>
                                                                                <td>
                                                                                    @if (child.ProfileStatus == "Draft" || child.ProfileStatus == "Pending")
                                                                                    {
                                                                                        @(child.ProfileStatus == "Pending" ? "Submitted" : child.ProfileStatus)
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <select data-profileid="@child.ProfileId" class="form-control mt-1 PlanStatus-dropdown">
                                                                                            <option value="Assign" @(child.ProfileStatus == "Assign" ? "selected" : "") disabled>Assigned</option>
                                                                                            <option value="Completed" @(child.ProfileStatus == "Completed" ? "selected" : "")>Completed</option>
                                                                                        </select>
                                                                                    }
                                                                                </td>
                                                                             <td>
                                                                                    @child.Awakenstatus
                                                                             </td>
                                                                        <td>
                                                                            @if (user.activestatus != "Deactive")
                                                                            {
                                                                                <a href="/admin/editUserPlan/@child.ProfileId" target="_blank" class=" text-decoration-none me-2">
                                                                                    Edit FactFinder
                                                                                </a>
                                                                                <span>|</span>
                                                                            }
                                                                            @if (child.UserPlan?.ToLower() == "basic" || child.UserPlan?.ToLower() == "zero2one")
                                                                              {
                                                                                <a href="/pdf/downloads/@child.ProfileId"
                                                                                   target="_blank" class="text-success text-decoration-none ms-2">Download PDF</a>
                                                                              }else {
                                                                                <a href="/pdf/download/@child.ProfileId"
                                                                                                           target="_blank" class="text-success text-decoration-none ms-2">Download PDF</a>
                                                                              }
                                                                           
                                                                        </td>
                                                                    </tr>
                                                                    childSerial++;
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>


                        serialNo++;
                    }
                }
            }
        </tbody>
    </table>
    <br />
<div class="text-end ">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=1&search=@search">First</a>
                </li>
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage - 1)&search=@search">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@search">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage + 1)&search=@search">Next</a>
                </li>
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@totalPages&search=@search">Last</a>
                </li>
            </ul>
        </nav>
</div>
</div>
    </div>

</div>
